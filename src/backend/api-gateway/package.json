{
  "name": "@dogwalking/api-gateway",
  "version": "1.0.0",
  "description": "API Gateway service for the Dog Walking Platform",
  "main": "dist/server.js",
  "scripts": {
    "clean": "rimraf dist coverage",
    "prebuild": "npm run clean",
    "build": "tsc",
    "build:docker": "docker build -t api-gateway .",
    "start": "node dist/server.js",
    "start:dev": "cross-env NODE_ENV=development nodemon src/server.ts",
    "start:prod": "cross-env NODE_ENV=production node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config jest.e2e.config.js",
    "test:integration": "jest --config jest.integration.config.js",
    "test:load": "artillery run load-tests/scenarios.yml",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "security:audit": "npm audit",
    "security:scan": "snyk test",
    "docs:generate": "typedoc src/",
    "docs:api": "swagger-jsdoc -d swaggerDef.js -o api-docs.json",
    "version:major": "npm version major",
    "version:minor": "npm version minor",
    "version:patch": "npm version patch"
  },
  "dependencies": {
    "argon2": "^0.31.2",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^2.0.6",
    "http-status": "^1.7.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "libphonenumber-js": "^1.10.49",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "mqtt": "^5.0.5",
    "nodemailer": "^6.9.7",
    "otplib": "^12.0.1",
    "passport": "^0.7.0",
    "passport-apple": "^2.0.1",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "passport-oauth2": "^1.7.0",
    "pg": "^8.11.3",
    "prom-client": "^14.2.0",
    "rate-limit-redis": "^4.0.0",
    "rate-limiter-flexible": "^2.4.1",
    "sanitize-html": "^2.11.0",
    "sequelize": "^6.35.1",
    "speakeasy": "^2.0.0",
    "twilio": "^4.19.0",
    "uuid": "^9.0.0",
    "validator": "^13.11.0",
    "winston": "^3.11.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.9.4",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "artillery": "^2.0.3",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lerna": "^8.0.1",
    "nodemon": "^3.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "snyk": "^1.1260.0",
    "supertest": "^6.3.3",
    "swagger-jsdoc": "^6.2.8",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.25.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}